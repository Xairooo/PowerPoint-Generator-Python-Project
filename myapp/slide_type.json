{
    "layout_types": [
        {
            "type": "Title",
            "description": "A slide with a title and subtitle, often for introductions or section headers.",
            "example": {
                "type": "Title",
                "sections": [
                    {
                        "position": "top",
                        "type": "title",
                        "content": "Welcome to the Presentation"
                    },
                    {
                        "position": "center",
                        "type": "subtitle",
                        "content": "Presented by John Doe"
                    }
                ]
            }
        },
        {
            "type": "List",
            "description": "A bullet-point list of items or key points.",
            "example": {
                "type": "List",
                "sections": [
                    {
                        "position": "top",
                        "type": "title",
                        "content": "Employee Benefits"
                    },
                    {
                        "position": "main",
                        "type": "bullets",
                        "items": [
                            "Health Insurance",
                            "Flexible Hours",
                            "Retirement Plan"
                        ]
                    }
                ]
            }
        },
        {
            "type": "Grid",
            "description": "A multi-column layout for comparing categories or listing features.",
            "example": {
                "type": "Grid",
                "sections": [
                    {
                        "position": "top",
                        "type": "title",
                        "content": "AI Applications"
                    },
                    {
